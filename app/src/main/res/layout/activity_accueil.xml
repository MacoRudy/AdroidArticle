<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AccueilActivity">

    <Button
        android:id="@+id/btn_ajouter"
        android:layout_width="200dp"
        android:layout_height="79dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="448dp"
        android:text="Ajouter un article"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onClickAjout"/>

    <Button
        android:id="@+id/btn_afficher"
        android:layout_width="201dp"
        android:layout_height="82dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="432dp"
        android:text="Afficher la liste des articles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClickAfficher"/>
</androidx.constraintlayout.widget.ConstraintLayout>